---
import "../styles/global.css";

interface Props {
    name: string;
    greeting?: string;
}

const { greeting = "Hello", name } = Astro.props;
const formattedGreeting = `${greeting}, ${name}!`;
---

<div class="greeting">
    <h2>{formattedGreeting}</h2>
    <p class="comment">This component is rendered on the server.</p>
</div>

<style>
    .greeting {
        padding: 1rem;
        border: 1px solid #ddd;
        border-radius: 8px;
    }
    .comment {
        color: #888;
    }
</style>
